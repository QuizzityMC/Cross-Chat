{
  "name": "cross-chat",
  "version": "1.0.0",
  "description": "A modern cross-platform communications platform",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "jest",
    "build:web": "cd web-client && npm run build",
    "build:desktop": "cd desktop && npm run build",
    "build:android": "cd mobile && npm run build",
    "install:all": "npm install && cd web-client && npm install && cd ../desktop && npm install && cd ../mobile && npm install"
  },
